{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": ["jest", "node"],
    "alwaysStrict": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/src"
  },
  "include": [
      "src/ts/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
